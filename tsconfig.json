{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "api/**/*",
    "types/**/*",
    "**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}